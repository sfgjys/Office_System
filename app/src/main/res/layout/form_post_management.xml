<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edittextitem="http://schemas.android.com/apk/res-auto"
    xmlns:tableSuggest="http://schemas.android.com/apk/res-auto"
    style="@style/form_head_parent_layout_style">

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_main_office"
        style="@style/width_match_height_wrap"
        edittextitem:editText_hint="请输入主办处室"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="主办处室 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_drafter"
        style="@style/editText_item_top"
        edittextitem:editText_hint="请输入拟搞人"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="拟搞人 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_post_type"
        style="@style/editText_item_top"
        android:layout_marginRight="100dp"
        edittextitem:editText_hint="请选择类型"
        edittextitem:editText_is_clickable="false"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="发文类型 : "
        edittextitem:editText_right_icon="@drawable/selector_pull_down" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_secret_grade"
        style="@style/editText_item_top"
        android:layout_marginRight="100dp"
        edittextitem:editText_hint="请选择"
        edittextitem:editText_is_clickable="false"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="密级 : "
        edittextitem:editText_right_icon="@drawable/selector_pull_down" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_post_title"
        style="@style/editText_item_top"
        edittextitem:editText_hint="请输入发文标题"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="发文标题 : "
        edittextitem:editText_max_lines="3" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_main_send_office"
        style="@style/editText_item_top"
        edittextitem:editText_hint="请输入主送机关"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="主送机关 : "
        edittextitem:editText_max_lines="3" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_nuclear_draft_idea"
        style="@style/editText_item_top"
        edittextitem:editText_hint="可编辑核稿意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="核稿 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_office_nuclear_draft_idea"
        style="@style/editText_item_top"
        edittextitem:editText_hint="可编辑办公室核稿意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="办公室核稿 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_countersign_idea"
        style="@style/editText_item_top"
        edittextitem:editText_hint="可编辑会签意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="会签意见 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.TableSuggest
        android:id="@+id/form_post_management_countersign_suggest"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        tableSuggest:table_first_lie_name="阅者姓名"
        tableSuggest:table_second_lie_name="阅办时间"
        tableSuggest:table_third_lie_name="处室阅办"
        tableSuggest:table_title="已阅办过的领导" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_sign_and_issue"
        style="@style/editText_item_top"
        android:layout_marginTop="20dp"
        edittextitem:editText_hint="可编辑签发意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="签发 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_fair_copy_idea"
        style="@style/editText_item_top"
        edittextitem:editText_hint="可编辑清稿意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="清稿意见 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_post_number"
        style="@style/editText_item_top"
        edittextitem:editText_hint="请输入发文文号"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="发文文号 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_post_management_print_number"
        style="@style/editText_item_top"
        edittextitem:editText_hint="请输入打印份数"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="打印份数 : " />

    <LinearLayout
        android:id="@+id/form_post_management_details"
        style="@style/editText_item_top"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="附件下载 : "
            android:textColor="@color/black"
            android:textSize="18dp" />

        <LinearLayout
            android:id="@+id/form_post_management_details_right"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="6dp"
            android:layout_marginStart="6dp"
            android:layout_weight="1"
            android:orientation="vertical" />
    </LinearLayout>
</LinearLayout>