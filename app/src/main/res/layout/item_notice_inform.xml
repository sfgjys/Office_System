<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_item_notice_inform_background"
        android:padding="15dp">

        <LinearLayout
            android:id="@+id/item_notice_inform_ll"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@mipmap/notice_icon" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/item_notice_inform_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="明基逐鹿会议"
                    android:textColor="@color/black"
                    android:textSize="22dp" />

                <TextView
                    android:id="@+id/item_notice_inform_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:text="2017-3-29 15:45:21"
                    android:textColor="@color/black"
                    android:textSize="18dp" />
            </LinearLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/item_notice_inform_issuer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@id/item_notice_inform_ll"
            android:text="(admin)"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </RelativeLayout>

    <View
        android:id="@+id/item_notice_inform_bottom_line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/thin_gray" />
</LinearLayout>
