<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:edittextitem="http://schemas.android.com/apk/res-auto"
    style="@style/form_head_parent_layout_style">

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_title"
        style="@style/width_match_height_wrap"
        edittextitem:editText_hint="请输入标题"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="请假标题 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_type"
        style="@style/editText_item_top"
        android:layout_marginRight="100dp"
        edittextitem:editText_hint="请选择"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="请假类型 : "
        edittextitem:editText_right_icon="@mipmap/pull_down_default" />

    <com.minlu.office_system.customview.EditTextTimeSelector
        android:id="@+id/form_leave_management_start_time"
        style="@style/editText_item_top"
        edittextitem:time_selector_left_text="开始时间 : " />

    <com.minlu.office_system.customview.EditTextTimeSelector
        android:id="@+id/form_leave_management_end_time"
        style="@style/editText_item_top"
        edittextitem:time_selector_left_text="结束时间 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_leave_day_number"
        style="@style/editText_item_top"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="请假天数 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_residue_leave_year_number"
        style="@style/editText_item_top"
        android:layout_marginRight="100dp"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="剩余年假 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_add_up_leave_day_number"
        style="@style/editText_item_top"
        android:layout_marginRight="100dp"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="累计请假 : " />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_remark"
        style="@style/editText_item_top"
        edittextitem:editText_hint="各种建议,备注"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_is_edit="false"
        edittextitem:editText_left_text="备注 : "
        edittextitem:editText_max_lines="6" />

    <com.minlu.office_system.customview.EditTextItem
        android:id="@+id/form_leave_management_approve_idea"
        style="@style/editText_item_top"
        edittextitem:editText_hint="填写审批意见"
        edittextitem:editText_input_type="textMultiLine"
        edittextitem:editText_left_text="审批意见 : "
        edittextitem:editText_max_lines="99" />
</LinearLayout>