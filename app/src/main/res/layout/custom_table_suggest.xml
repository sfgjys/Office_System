<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/tv_table_suggest_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="已批示过的领导 : "
        android:textColor="@color/black"
        android:textSize="18dp"
        android:visibility="visible" />

    <LinearLayout
        android:id="@+id/ll_table_suggest_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:background="@color/black"
        android:orientation="vertical"
        android:padding="0.5dp"
        android:visibility="visible">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_table_suggest_view_first_lie"
                style="@style/record_end_step_suggest_text_style"
                android:layout_weight="0.8"
                android:text="阅者姓名"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_table_suggest_view_second_lie"
                style="@style/record_end_step_suggest_text_style"
                android:layout_weight="1"
                android:text="阅文时间"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_table_suggest_view_third_lie"
                style="@style/record_end_step_suggest_text_style"
                android:layout_weight="1"
                android:text="领导批示"
                android:textSize="16dp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>